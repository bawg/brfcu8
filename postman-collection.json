  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Set default base URL if not set",
          "if (!pm.environment.get(\"BASE_URL\")) {",
          "    pm.environment.set(\"BASE_URL\", \"https://your-vercel-deployment.vercel.app\");",
          "    console.log(\"Set default BASE_URL to Vercel deployment\");",
          "}"
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "BASE_URL",
      "value": "https://your-vercel-deployment.vercel.app",
      "description": "Replace with your actual Vercel deployment URL"
    }
  ]
}