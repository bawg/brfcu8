    {
      "name": "Test Environment Variables Debug",
      "item": [
        {
          "name": "Debug Signin Environment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"debug@example.com\",\n  \"password\": \"debug123\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/auth/signin",
