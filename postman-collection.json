{
  "info": {
    "name": "Barnes Rugby Authentication API",
    "description": "Test collection for authentication endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication Tests",
      "item": [
        {
          "name": "Test Signup",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"test123456\",\n  \"displayName\": \"Test User\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/auth/signup",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "api",
                "auth",
                "signup"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Test Signin with Email/Password",
          "request": {
            "method": "POST",
